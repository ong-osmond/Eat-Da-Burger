<div class="col-lg-12">
  <div class="section_title text-center mb-180">
    <span style="font-size: 0.5in;">Eat Da Burger!</span>
    <img src="assets/img/burger-304707_960_720.png" style="height: 50px;">
  </div>
</div>

<br>

<div class="row">

  <div class="section_title col-xl-6 col-md-6 col-lg-6">
    <div class="info">
      <h1>Burgers to devour:</h1>
    </div>

    <ul class="room_heading_inner">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div class="section_title col-xl-6 col-md-6 col-lg-6">
    <div class="info">
      <h1>Burgers already devoured:</h1>
    </div>

    <ul class="room_heading_inner">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>

  </div>

</div>

<br>

  <div class="section_title col-xl-12 col-md-12 col-lg-12"></div>
    <div class="info">
      <h1>Add a Burger:</h1>
    </div>
    <form class="create-form">
      <div class="form-group">
        <label for="ca" style="color: black;">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit" class="boxed-btn3">Add Burger</button>
    </form>
  </div>